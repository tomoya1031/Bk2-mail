<div class="container">
	<% if flash[:notice] %>
	     <div class="flash">
	     	<%= flash[:notice] %>
	     </div>
	<% elsif flash[:alert]%>
		<div>
	     	<%= flash[:alert] %>
	    </div>
	<% end %>

<!--  <%= render 'books/sidebar', book: @book  %> -->

	<div class="row">
		<div class="col-xs-3">
			<div>
			    <h2>User info</h2>
		    </div>
		    <div class="img-box">
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
			</div>
		    <table class="table">
			    <tbody>
				    <tr>
					    <td>
					   		<strong>name</strong>
					   	</td>
					    <td>
					    	<strong><%= @user.name %></strong>
					    </td>
			    	</tr>
   					<tr>
    					<td>
	    					<strong>introduction</strong>
	    				</td>
		   				<td>
		   					<strong><%= @user.introduction %></strong>
		   				</td>
		    		</tr>
			    </tbody>
    		</table>
    		<div classa="btn btn-info">
				<%= link_to edit_user_path(current_user.id) , class: "btn btn-default w-100" do %>
   					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>
	    	</div>
		    <div class="new-title">
			    <h2>New book</h2>
		    </div>
			<%= form_for(@book) do |f| %>
		        <div class="field">
		    	    <div>
		    		    <%= f.label :title, "Title" %>
    			    </div>
	    		   	<div>
		    	   		<%= f.text_field :title ,class: "w-100" %>
			       	</div>
			    </div>
		        <div class="field">
		    	    <div>
		    		    <%= f.label :title, "Opinion" %>
			    	</div>
			        <div>
			   		    <%= f.text_area :body ,class: "w-100"%>
			   	    </div>
		        </div>
		        <%= f.submit 'Create Book' ,class: "btn btn-primary w-100 border" %>
		    <% end %>
	    </div>
	    <div class="col-xs-9">

            <h2>Books</h2>
            <table class="table table-hover">
	            <thead>
	               	<tr>
			            <th></th>
               			<th>Title</th>
               			<th>Opinion</th>
               		</tr>
                </thead>
                <tbody> 
               		<% @books.each do |book| %>
		                <tr>
              		    	<td>
               		    		<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
               		    	</td>
               		    	<td>
               		    		<%= link_to book_path(book.id),class: "list-aitem" do %>
            						<%= book.title %>
            					<% end %>
                		   	</td>
		                   	<td class="list"><%= book.body %></td>
		                </tr>
		            <% end %>
	            </tbody>
            </table>
        </div>
    </div>
</div>