<div class="top">
	<% if flash[:notice] %>
	     <div class="flash">
	     	<%= flash[:notice] %>
	     </div>
	<% elsif flash[:alert]%>
		<div>
	     	<%= flash[:alert] %>
	    </div>
	<% end %>

<!--  <%= render 'books/sidebar', book: @book  %> -->

	<div class="container">
		<div class="row">
			<div class="col-xs-3">
			    <div>
				    <h2>User info</h2>
			    </div>
			    <div class="img-box">
				    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
			    </div>
			    <table>
				    <tbody>
					    <tr>
					    	<td class="list">
					    		<strong>name</strong>
					    	</td>
						    <td class="list">
						    	<strong><%= @user.name %></strong>
						    </td>
				    	</tr>
    					<tr>
	    					<td class="list">
	    						<strong>introduction</strong>
	    					</td>
		    				<td class="list">
		    					<strong><%= @user.introduction %></strong>
		    				</td>
			    		</tr>
				    </tbody>
    			</table>
    			<div classa="btn btn-info">
					<%= link_to edit_user_path(current_user.id) , class: "btn btn-default w-100" do %>
    					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end %>
	    		</div>
			    <div class="new-tite">
				    <h2>New book</h2>
			    </div>
			    <%= form_for(@book) do |f| %>
			        <div>
			    	    <div>
			    		    <%= f.label :title, "Titele" %>
    			    	</div>
	    		    	<div>
		    	    		<%= f.text_field :title ,class: "w-100" %>
			        	</div>
			        </div>
			        <div>
			    	    <div>
			    		    <%= f.label :title, "Opinion" %>
			    	    </div>
			    	    <div>
			    		    <%= f.text_area :body ,class: "w-100"%>
			    	    </div>
			        </div>
			        <%= f.submit 'Create Book' ,class: "btn btn-primary w-100 border" %>
			    <% end %>
		    </div>
		    <div class="col-xs-9">

                <h2>Books</h2>
                <table>
	                <thead>
	                   	<tr>
			                <th class="title"></th>
                   			<th class="title">Title</th>
                   			<th class="title">Opinion</th>
                   		</tr>
                    </thead>
                	<tbody> 
                		<% @books.each do |book| %>
		                    <tr class="list-back">
                		    	<td class="list">
                		    		<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
                		    	</td>
                		    	<td class="list">
                		    		<%= link_to book_path(book.id),class: "list-aitem" do %>
            						<%= book.title %>
            					<% end %>
                		    	</td>
		                    	<td class="list"><%= book.body %></td>
		                    </tr>
		                <% end %>
	                </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
