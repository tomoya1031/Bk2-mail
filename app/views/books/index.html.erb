<% if @book.errors.any? %>
    <div class="error">
    	<h4 class="error-title"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    	<ul class="error-box">
    		<% @book.errors.full_messages.each do |message| %>
    			<li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div>
				<h2>User info</h2>
			</div>
			<div>
				<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
			</div>
			<table>
				<tbody>
					<tr>
						<th>name</th>
						<th>名前</th>
					</tr>
					<tr>
						<th>introduction</th>
						<th>自己紹介</th>
					</tr>
				</tbody>
			</table>
			<div classa="btn btn-info">
					<%= link_to edit_user_path(current_user.id) , class: "btn btn-success" do %>
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end %>
			</div>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			    <div class="box field">
			    	<div>
			    		<%= f.label :title, "Titele" %>
			    	</div>
			    	<div>
			    		<%= f.text_field :title %>
			    	</div>
			    </div>
			    <div class="box">
			    	<div>
			    		<%= f.label :title, "Opinion" %>
			    	</div>
			    	<div>
			    		<%= f.text_area :body %>
			    	</div>
			    </div>
			    <%= f.submit 'Create Book' ,class:"submit" %>
			<% end %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tbody>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
						<th>
							<%= link_to book_path(book.id) do %>
							<%= book.title %>
							<% end %>
						</th>
						<th><%= book.body %></th>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>
