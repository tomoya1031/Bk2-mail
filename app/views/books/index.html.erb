<div class="top">
    <% if flash[:notice] %>
	    <div class="flash">
	        <%= flash[:notice] %>
	    </div>
    <% end %>
    <% if @book.errors.any? %>
        <div class="error">
    	    <h4 class="error-title"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
    	    <ul class="error-box">
    		    <% @book.errors.full_messages.each do |message| %>
    			    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

<%= render 'books/sidebar', book: @book %>

			    <h1>Books</h1>
			    <table>
				    <thead>
					    <tr>
						    <th></th>
						    <th>Title</th>
						    <th>Opinion</th>
					    </tr>
				    </thead>
				    <% @books.each do |book| %>
				        <tbody>
					        <tr class="list-back">
						        <td class="list-imag">
							        <%= link_to user_path(book.user.id) do %>
							            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
							        <% end %>
						        </td>
						        <td class="list">
							        <%= link_to book_path(book.id),class: "list-aitem" do %>
							            <%= book.title %>
							        <% end %>
						        </td>
						        <td class="list"><%= book.body %></td>
					        </tr>
				        </tbody>
				    <% end %>
			    </table>
		    </div>
	    </div>
    </div>
</div>